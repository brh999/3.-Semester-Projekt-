@model Models.Account
@using Models
@{
    ViewData["Title"] = "Account";
}
<body>

    <h1>- My Page -</h1>

    <h2>Your Offers</h2>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Currency
                </th>
                <th>
                    Price
                </th>
                <th>
                    Amount
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model.Posts)
            {
                @if (post.Type.Equals("Offer") && post.IsComplete == false)
            {
                    <tr>
                        <td>
                            @post.Currency.Type
                        </td>
                        <td>
                            @post.Price
                        </td>
                        <td>
                            @post.Amount
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = post.Id })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <h2>Wallet</h2>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Currency
                </th>
                <th>
                    Amount
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var currencyLine in Model.Wallet)
            {
                <tr>
                    <td>
                        @currencyLine.Currency.Type
                    </td>
                    <td>
                        @currencyLine.Amount
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>

</html>
