@model Models.DTO.AccountDto
@using Models
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<h2>Posts</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                Currency
            </th>
            <th>
                Price
            </th>
            <th>
                Amount
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model.Posts)
        {
            <tr>
               
                <td>
                    @post.Currency
                </td>
                <td>
                    @post.Price
                </td>
                <td>
                    @post.Amount
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = post.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>Wallet</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                Currency
            </th>
            <th>
                Amount
            </th>
            <!-- Add more columns as needed for the CurrencyLine object -->
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var currencyLine in Model.Wallet)
        {
            <tr>
                <td>
                    @currencyLine.Currency
                </td>
                <td>
                    @currencyLine.Amount
                </td>
                <!-- Add more cells as needed for the CurrencyLine object -->
                <td>
